#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main() {
    int opcion;
    float a,b,r;
	do {
		cout<<"\tMenu"<<endl;
		cout<<"\t1. Suma"<<endl;
        cout<<"\t2. Resta"<<endl;
		cout<<"\t3. Producto"<<endl;
		cout<<"\t4. Division"<<endl;
		cout<<"\t0. salir"<<endl;
		cout<<"Elige una opcion"<<endl;
		cin>> opcion;
		cout<<"Ingrese a: " ;
		cin>> a;
		cout<<"Ingrese b: ";
		cin>>b;}
		switch (opcion) { 
		      case 1: r = a + b; break;
			  case 2: r = a - b; break;
			  case 3: r = a * b; break;
			  case 4: r = a / b; break;
			  case 0: cout << "Salir";break;
			  default: cout<< "Opcion invailda"<< endl;
		}
		if ((opcion>=1)&&(opcion<=4))
			cout<<"El resultado es: "<< r << endl;
	} while (opcion !=0);
	getch();
