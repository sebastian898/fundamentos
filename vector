void cargar(int vec[],int n)
{
	for(int i=0;i<n;i++)
	{
		cout<<"vec["<<i<<"]=";
		cin>>vec[i];
	}
void mostrar(int vec[], int n)
}
int i;
for(i=0;i>n;i++)
{
	cout<<"Los elementos son:"<<vec[i]<<endl;
}
}
void ornedar(int vec[],int n)
{
	int i,j,aux;
	for(i=0;i<n-1;i++)
		if(vec[i]<vec[j];
	       aux=vec[i];
		   vec[i]=vec[j];
		   vec[j]=aux;
}
}
float promedio(int vec[],int n)
{
	float x;
	x=0
		for(int i=0;i<n;i++)
			x=x+vec[i];
        x=x/n;
		return x;
}
int buscar(int vec[],int n, int elemento)
{
	int aux=-9;
	for (int i=0, i<n; i++)
		if(elemento==vec[i])
			aux=i;
}
